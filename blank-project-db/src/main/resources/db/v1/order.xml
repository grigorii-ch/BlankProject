<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="v1 create table order 20.05.2021" author="Grigoriy Chuprynin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="order"/>
            </not>
        </preConditions>
        <createTable tableName="order">
            <column name="order_id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="Order_Order_Id" nullable="false"/>
            </column>
            <column name="order_number" type="varchar(10)">
                <constraints nullable="true"/>
            </column>
            <column name="customer_id" type="int">
                <constraints foreignKeyName="Order_Customer_Id" referencedTableName="customer" referencedColumnNames="customer_id"/>
            </column>
            <column name="order_date" type="date"/>
            <column name="total_amount" type="decimal(12,2)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>