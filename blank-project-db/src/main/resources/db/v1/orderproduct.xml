<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="v1 create table orderproduct 20.05.2021" author="Grigoriy Chuprynin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="orderproduct"/>
            </not>
        </preConditions>
        <createTable tableName="orderproduct">
            <column name="order_id" type="SERIAL">
                <constraints foreignKeyName="orderproduct_order_id" referencedTableName="order" referencedColumnNames="order_id"/>
            </column>
            <column name="product_id" type="int">
                <constraints foreignKeyName="orderproduct_product_id" referencedTableName="product" referencedColumnNames="product_id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>