<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="v1 create table product 20.05.2021" author="Grigoriy Chuprynin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="product"/>
            </not>
        </preConditions>
        <createTable tableName="product">
            <column name="productid" type="int">
                <constraints primaryKey="true" primaryKeyName="Product_ProductId" nullable="false"/>
            </column>
            <column name="productname" type="varchar(50)"/>
            <column name="supplieid" type="int">
                <constraints foreignKeyName="ProductId_SupplieId" referencedTableName="supplier" referencedColumnNames="supplieid"/>
            </column>
            <column name="unitprice" type="decimal(12,2)">
                <constraints nullable="true"/>
            </column>
            <column name="isdiscontined" type="boolean"/>
        </createTable>
    </changeSet>
</databaseChangeLog>